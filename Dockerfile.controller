# Minimal controller image for local/kind deployment (Chainguard bases to avoid gcr/dockerhub pulls)
FROM cgr.dev/chainguard/go:latest AS builder
WORKDIR /workspace
COPY go.mod go.sum ./
RUN go mod download
COPY . .
RUN CGO_ENABLED=0 GOOS=linux GOARCH=amd64 go build -o manager ./controller

FROM cgr.dev/chainguard/static:latest
WORKDIR /
COPY --from=builder /workspace/manager /manager
USER 65532:65532
ENTRYPOINT ["/manager"]
